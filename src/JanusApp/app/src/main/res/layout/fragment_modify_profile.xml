<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_modify_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modifyProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/currentProfileImage"
            android:layout_width="129dp"
            android:layout_height="122dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/default_prfile_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ModifyUsername"
            android:layout_width="208dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="112dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/currentProfileImage"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ModifyPassword"
            android:layout_width="348dp"
            android:layout_height="65dp"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentProfileImage" />

        <EditText
            android:id="@+id/ModifyEmail"
            android:layout_width="352dp"
            android:layout_height="66dp"
            android:layout_marginTop="76dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ModifyPassword" />

        <EditText
            android:id="@+id/ModifyTelNumber"
            android:layout_width="351dp"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ModifyEmail" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="223dp"
            android:layout_height="33dp"
            android:layout_marginStart="56dp"
            android:text="@string/password"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ModifyPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentProfileImage"
            app:layout_constraintVertical_bias="0.483" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="219dp"
            android:layout_height="31dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="16dp"
            android:text="@string/email"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ModifyEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ModifyPassword"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="217dp"
            android:layout_height="27dp"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="12dp"
            android:text="Phone number"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ModifyTelNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ModifyEmail"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="231dp"
            android:layout_height="55dp"
            android:text="Save Changes"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ModifyTelNumber"
            app:layout_constraintVertical_bias="0.222" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>